            "post": {
                "description": "Note: This is only required if auto_suspend is false, as manual suspension is required",
                "produces": [
                    "application/json"
                ],
                "summary": "Suspend storage providers",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Auth token",
                        "name": "token",
                        "in": "header",
                        "required": true
                    },
                    {
                        "description": "List of SP IDs to suspend",
                        "name": "body",
                        "in": "body",
